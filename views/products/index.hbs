{{#extends 'base'}}
{{#block 'content'}}
<form method="GET">
    {{{form}}}
    <a href="/products" class="btn btn-secondary mx-1">Reset</a>

    <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search" />
</form>
<h1>Products</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>ShoeType</th>
            <th>Cost</th>
            <th>Stock</th>
            <th>Brand</th>
            <th>Gender</th>
            <th>Colour</th>
            <th>Size</th>
            <th>Materials</th>
            <th>Description</th>
            <th>Image</th>
            <th>Edit</th>
        </tr>

    </thead>
    <tbody>
        {{#each shoes}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.shoe_type}}
            </td>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.cost}}
            </td>
            <td>
                {{this.stock}}
            </td>
            <td>
                {{this.brand.brand}}
            </td>
            <td>
                {{this.color.color}}
            </td>
            <td>
                {{this.gender.gender}}
            </td>
            <td>
                {{this.size.size}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>
                {{#each this.materials}}
                <span class="badge bg-primary">{{this.materials}}</span>
                {{/each}}
            </td>

            <td>
                {{!-- <img src='{{this.image_url}}' alt='shoe image' /> --}}
                <img src='{{this.thumbnail_url}}' alt='shoe image' />
            </td>
            <td>
                <a href="/products/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/products/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<br>
<a href="/products/create" class="btn btn-danger btn-sm">Add new products</a>

{{/block}}
{{/extends}}